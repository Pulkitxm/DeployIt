generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  github_id       Int       @unique
  name            String?   @default("")
  github_username String
  email           String    @unique
  bio             String?
  avatar          String
  access_token    String
  Project         Project[]
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model Project {
  id             String   @id @default(cuid())
  name           String
  owner          User     @relation(fields: [userId], references: [id])
  repoOwner      String
  repoName       String
  branch         String
  buildCommand   String
  installCommand String
  userId         String
  EnvVar         EnvVar[]
  logs           String[]
  slug           String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model EnvVar {
  id        String  @id @default(cuid())
  key       String
  value     String
  project   Project @relation(fields: [projectId], references: [id])
  projectId String
}
