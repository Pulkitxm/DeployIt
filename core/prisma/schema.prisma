generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  github_id       Int       @unique
  name            String?   @default("")
  github_username String
  email           String    @unique
  bio             String?
  avatar          String
  access_token    String
  Project         Project[]
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model Project {
  // Basic information
  id        String   @id @default(cuid())
  name      String
  owner     User     @relation(fields: [userId], references: [id])
  repoOwner String
  repoName  String
  branch    String
  slug      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  private   Boolean  @default(false)

  // Build & web info
  buildCommand   String
  installCommand String
  size           Int    @default(0)
  views          Int    @default(0)

  // User relation
  userId String

  // Environment variables & logs
  EnvVar EnvVar[]
  logs   Json[]

  // Indexes
  @@index([slug], map: "slug")
  @@index([name], map: "name")
}

model EnvVar {
  id        String  @id @default(cuid())
  key       String
  value     String
  project   Project @relation(fields: [projectId], references: [id])
  projectId String
}
